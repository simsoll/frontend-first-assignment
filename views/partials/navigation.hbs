<nav>
    <div class="navigation-container">
        <div class="navigation-links pull-left">
            <a href="/" class="navigation-link home-link {{#isEqual active 'home'}}-active{{else}}-inactive{{/isEqual}}">CONSTRUCTLY</a>
            <a href="/products" class="navigation-link products-link {{#isEqual active 'products'}}-active{{else}}-inactive{{/isEqual}} -{{active}}">PRODUCTS</a>
            <a href="/purchases" class="navigation-link purchases-link {{#isEqual active 'purchases'}}-active{{else}}-inactive{{/isEqual}}">PURCHASES</a>
        </div>
        <div class="button-container">
        </div>
        <div class="hide-x-small">
            <div class="button-placement-container -pull-up">        
                <div class="button-container">   
                    <button class="checkout-button button -primary -full-width" {{#unless pendingPurchase.products.length}}disabled{{/unless}}>Checkout ({{#if pendingPurchase.products.length}}<span class="cart__items">{{pendingPurchase.products.length}}</span>{{else}}<span class="cart__items">0</span>{{/if}})</button>
                </div>
            </div>
            <div class="button-placement-container -pull-down">        
                <div class="button-container">           
                    {{#isEqual active 'products'}}
                        <button class="category-button button -utility -full-width">Categories</button>
                    {{else}}
                        <button class="login-button button -utility -full-width">Login</button>
                    {{/isEqual}}
                </div>
            </div>
        </div>
        <div class="show-x-small">
            <div class="button-placement-container -pull-up -pull-left">        
                <div class="button-container">           
                    <div class="barcode-scanner">
                        <input class="barcode-scanner__input" type="file" id="barcode-scanner" accept="image/*">
                        <label class="barcode-scanner__label button -full-width" for="barcode-scanner">Scan Code</label>
                    </div>
                </div>
            </div>            
            <div class="button-placement-container -pull-up -center-horizontal">        
                <div class="button-container">           
                    {{#isEqual active 'products'}}
                        <button class="category-button button -full-width">Categories</button>
                    {{else}}
                        <button class="login-button button -utility -full-width">Login</button>
                    {{/isEqual}}
                </div>
            </div>
            <div class="button-placement-container -pull-up -pull-right">        
                <div class="button-container">   
                    <button class="checkout-button button -primary -full-width" {{#unless pendingPurchase.products.length}}disabled{{/unless}}>Checkout ({{#if pendingPurchase.products.length}}<span class="cart__items">{{pendingPurchase.products.length}}</span>{{else}}<span class="cart__items">0</span>{{/if}})</button>
                </div>
            </div>
        </div>
    </div>   
    <div class="navigation-spacing">
    </div> 
</nav>