<div class="product-container col-x-small-12 col-small-6 col-large-4">
    <div class="product">
        <img class="product__image" src="{{image}}" />
        <h2 class="product__name">{{name}}</h2>
        <p class="product__producer">by {{producer}}</p>
        <p class="product__description">{{description}}</p>
        {{#ifGreaterThan stock 5}}
            <p class="product__stock">In stock</p>
        {{else}}
            {{#ifGreaterThan stock 0}}
                <p class="product__stock -warning">Only {{stock}} in stock</p>        
            {{else}}
                <p class="product__stock -alert">Out of stock</p>                
            {{/ifGreaterThan}}
        {{/ifGreaterThan}}
        <p class="product__price">â‚¬ {{price}}</p>
        <select class="product__button -option option {{#if isInPendingOrder}}hide{{/if}}"name="quantityOption-{{id}}" id="quantityOption-{{id}}" data-id="{{id}}">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>        
        <div class="button-placement-container">
            <div class="button-container">        
                <button class="product__button button -full-width -undo remove {{#unless isInPendingOrder}}hide{{/unless}}" data-id="{{id}}">Remove from Order</button> 
                <button class="product__button button -full-width -pull-right -action visible-xs add {{#if isInPendingOrder}}hide{{/if}}" data-id="{{id}}">Add to Order</button>
                <button class="product__button button -half-width -pull-right -action hidden-xs add {{#if isInPendingOrder}}hide{{/if}}" data-id="{{id}}">Add to Order</button>
            </div>
        </div>
    </div>
</div>
            