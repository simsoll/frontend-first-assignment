<div class="order">
    <p>Ordered by: {{creator}}</p>
    <p>Ordered at: {{timestamp}}</p>
    <p>Approved: 
        {{#if approved}}
        <span class="-warning">Done!</span>
        {{else}}
        <span class="-completed">Not yet!</span>        
        {{/if}}
         </p>
    <h3>Products</h3>
    <ul>
        {{#each products}}
            <li>Amount: {{amount}}, Product description: {{product.description}}</li>
        {{/each}}
    </ul>
    {{#unless approved}}
    <button>Approve</button>
    {{/unless}}
</div>